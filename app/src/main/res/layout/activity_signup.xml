<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="buddy.conversa.MainActivity"
    android:backgroundTint="@color/accent_material_light"
    android:backgroundTintMode="screen"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:showDividers="middle|beginning|end"
        android:transitionGroup="false"
        android:weightSum="1"
        android:visibility="visible">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hola!s"
            android:id="@+id/textView"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:visibility="visible"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:textColorHighlight="@color/abc_background_cache_hint_selector_material_light" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|phone"
            android:ems="10"
            android:id="@+id/inputPhone"
            android:text="+91"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:layout_gravity="center"

            android:clickable="true"
            android:digits="@android:string/emptyPhoneNumber"
            android:ellipsize="middle"
            android:enabled="true"

            android:padding="5dp"
            android:textIsSelectable="true"
            android:hint="enter your phone number"
            android:layout_weight="0.07" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputUserName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:singleLine="true"
            android:hint="Username"
            android:enabled="true"

            android:clickable="true"
            android:textIsSelectable="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pwd"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:hint="Password"
            android:singleLine="true"
            android:textSize="22sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_marginTop="10dp"
            android:hint="City"
            android:textSize="22sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/btnSignUp"
            android:id="@+id/btnSignUp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="25dp" />

    </LinearLayout>

</RelativeLayout>
